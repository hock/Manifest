{
	"title": "Manifest Editor",
	"type": "object",
	"properties": {	  
		"attributes": {
			"type": "object",
			"title": "Summary",			
			"properties": {
				"name": {
					"type": "string",
					"title": "Name",
					"options": {
						"inputAttributes": {
							"placeholder":  "Sample Supply Chain"
						}
					}
				},
				"description": {
					"type": "string",
				    "format": "markdown",
					"title": "Description",					
					"options": {
						"inputAttributes": {
							"placeholder":  "This is the supply chain for the latest and greatest."
						}
					}
				},
				"Location": {
					"title": "Location",
					"type": "object",
					"$ref": "location.json"
				}
			},
		    "required": ["name"],
			"options": {
				"disable_properties": false			
			}
		},		
		"nodes": {	
			"title": "Nodes",
			"type": "array",
			"format": "grid-strict",
			"items": {	  
		        "class": "nodepanel",
				
				"title": "Node",	
				"type": "object",
				"id": "arr_item",	
				"$ref": "node.json"
			}
		}	
	}
}