{
	"type": "object",
	"title": "Node",
	"properties": {
		"index": {
			"type": "integer",
			"template": "indexCount",
			"options": {
				"hidden": true,
				"inputAttributes": {
					"class": "nodeindexinput"
				}				
			}     
		},
		"name": {
			"type": "string",
			"title": "Name",
			"options": {
				"inputAttributes": {
					"placeholder":  "Sample Supplier"
				}
			} 
		},
		"description": {
			"type": "string",
		    "format": "markdown",
			"title": "Description",			
			"options": {
				"inputAttributes": {
					"placeholder":  "This is a sample supplier."
				}
			} 
		},
		"location": {
			"title": "Location",
			"type": "object",
			"$ref": "location.json",
			"options": {
		      "collapsed": true
			}
		},
		
		"attributes": {
			"type": "object",
			"options": {
	          "grid_break": true,
			  "collapsed": true,
				"disable_properties": false
			},
			"properties": {
				"destinationindex": {
					"type": "string",
					"title": "Connects to",			
					"options": {
		  		      "infoText": "The index of the node this node is connected to. This connection is directional. Multiple nodes should be seperated by commas: 1,2,3,6,10 etc..."
					} 
				},
				"category": {
					"type": "string",
					"title": "Category",				
					"options": {
			          "grid_columns": 3,
			          "grid_break": true
					} 
				},
				"image": {
					"title": "Featured Image",
					"type": "string"
				},
				"sources": {
					"type": "string",
					"title": "References",				
					"options": {
		  		      "infoText": ""
					} 
				},
				"notes": {
					"type": "string",
				    "format": "markdown",
					"title": "Additional Notes",			
					"options": {
		  		      "infoText": "Freeform markdown field for additional details that will not be displayed by default."
					} 
				}
			}
		},      
		 
		"measures": {
			"type": "object",
			"properties": {
				"measuretype": {
					"type": "string"
				},
				"measurevalue": {
					"type": "integer"
				}
			},
			"options": {
		      "collapsed": true
			}
		}  
	}
}